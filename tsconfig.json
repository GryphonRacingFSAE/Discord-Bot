{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2021",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "lib": ["es2021"]
}